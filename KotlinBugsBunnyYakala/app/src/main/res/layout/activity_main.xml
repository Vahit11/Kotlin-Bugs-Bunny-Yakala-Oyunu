<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@drawable/grass"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sure_textView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="@android:color/white"
        android:text="Sure: 0"
        android:gravity="center"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/puan_textView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="@android:color/white"
        android:text="Puan: 0"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/bugsbunny1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bugsbunny"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="clickBugsBunny"/>

        <ImageView
            android:id="@+id/bugsbunny2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bugsbunny"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="clickBugsBunny"/>

        <ImageView
            android:id="@+id/bugsbunny3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bugsbunny"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="clickBugsBunny"/>

        <ImageView
            android:id="@+id/bugsbunny4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bugsbunny"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="clickBugsBunny"/>

        <ImageView
            android:id="@+id/bugsbunny5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bugsbunny"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="clickBugsBunny"/>

        <ImageView
            android:id="@+id/bugsbunny6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bugsbunny"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="clickBugsBunny"/>

        <ImageView
            android:id="@+id/bugsbunny7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bugsbunny"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="clickBugsBunny"/>

        <ImageView
            android:id="@+id/bugsbunny8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bugsbunny"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="clickBugsBunny"/>

        <ImageView
            android:id="@+id/bugsbunny9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bugsbunny"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="clickBugsBunny"/>

    </GridLayout>

</LinearLayout>